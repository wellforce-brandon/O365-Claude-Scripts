{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "description": "Skill auto-activation rules for Wellforce Platform",

  "backend-dev-guidelines": {
    "type": "domain",
    "enforcement": "suggest",
    "priority": "high",
    "description": "Guidelines for backend API development with Express, PostgreSQL, and TypeScript",
    "promptTriggers": {
      "keywords": [
        "backend",
        "api",
        "endpoint",
        "route",
        "controller",
        "database",
        "postgres",
        "sql",
        "query",
        "express",
        "server"
      ],
      "intentPatterns": [
        "(create|add|build|implement).*(route|endpoint|api|controller)",
        "(fix|debug|resolve).*(backend|api|server|endpoint)",
        "(database|db|postgres|sql).*(query|table|schema)",
        "(add|create).*(table|column|migration)"
      ]
    },
    "fileTriggers": {
      "pathPatterns": [
        "src/**/*.ts",
        "src/routes/**/*.ts",
        "database/**/*.sql"
      ],
      "contentPatterns": [
        "app\\.(get|post|put|delete|patch)",
        "router\\.",
        "pool\\.query",
        "async.*req.*res"
      ]
    }
  },

  "frontend-dev-guidelines": {
    "type": "domain",
    "enforcement": "suggest",
    "priority": "high",
    "description": "Guidelines for Next.js dashboard development with React and Material UI",
    "promptTriggers": {
      "keywords": [
        "frontend",
        "dashboard",
        "react",
        "component",
        "next",
        "nextjs",
        "ui",
        "interface",
        "page",
        "material ui",
        "mui"
      ],
      "intentPatterns": [
        "(create|add|build).*(component|page|ui|interface)",
        "(style|design|layout)",
        "(fix|debug).*(frontend|dashboard|ui|component)",
        "material.?ui"
      ]
    },
    "fileTriggers": {
      "pathPatterns": [
        "dashboard/**/*.tsx",
        "dashboard/**/*.ts",
        "dashboard/**/*.jsx",
        "dashboard/src/**/*"
      ],
      "contentPatterns": [
        "import.*from ['\"]react['\"]",
        "export default function",
        "useState|useEffect|useContext",
        "from ['\"]@mui"
      ]
    }
  },

  "design-principles": {
    "type": "quality",
    "enforcement": "suggest",
    "priority": "critical",
    "description": "SupportForge design system - colors, typography, spacing, accessibility (WCAG AA), and theme support",
    "promptTriggers": {
      "keywords": [
        "ui",
        "design",
        "component",
        "button",
        "form",
        "input",
        "card",
        "modal",
        "dialog",
        "badge",
        "table",
        "navigation",
        "layout",
        "style",
        "css",
        "theme",
        "color",
        "spacing",
        "font",
        "typography",
        "accessibility",
        "responsive",
        "mobile",
        "desktop agent gui",
        "wails frontend"
      ],
      "intentPatterns": [
        "(create|add|build|update).*(component|ui|button|form|card|modal|badge)",
        "(style|design|layout).*(component|page|ui)",
        "(color|spacing|font|typography)",
        "(dark mode|theme|light mode|high contrast)",
        "(accessibility|wcag|aria|keyboard)",
        "(responsive|mobile|tablet|desktop)",
        "desktop.?agent.*(ui|gui|frontend)"
      ]
    },
    "fileTriggers": {
      "pathPatterns": [
        "dashboard/**/*.tsx",
        "dashboard/**/*.jsx",
        "dashboard/**/*.css",
        "dashboard/src/components/**/*",
        "dashboard/src/app/**/*",
        "desktop_agent/frontend/**/*",
        "desktop_agent/**/*ui*.go",
        "desktop_agent/**/*webview*.go"
      ],
      "contentPatterns": [
        "style=\\{",
        "className=",
        "background.*color",
        "padding|margin",
        "fontSize|fontFamily|fontWeight",
        "rounded-|px-|py-|gap-|text-",
        "theme\\.",
        "aria-",
        "focus:",
        "hover:",
        "transition"
      ]
    }
  },

  "mvp-principles": {
    "type": "quality",
    "enforcement": "suggest",
    "priority": "critical",
    "description": "Enforce MVP/prototype principles - simplicity over complexity",
    "promptTriggers": {
      "keywords": [
        "architecture",
        "design",
        "pattern",
        "abstraction",
        "refactor",
        "service",
        "factory",
        "interface",
        "abstract",
        "framework"
      ],
      "intentPatterns": [
        "(create|add|implement).*(service|factory|repository|interface)",
        "(refactor|redesign|restructure)",
        "(abstract|generalize)",
        "dependency.?injection",
        "design.?pattern"
      ]
    },
    "fileTriggers": {
      "pathPatterns": [
        "**/*.ts",
        "**/*.tsx"
      ],
      "contentPatterns": [
        "class.*Service",
        "class.*Factory",
        "class.*Repository",
        "interface.*Service",
        "abstract class"
      ]
    }
  },

  "tdd-workflow": {
    "type": "quality",
    "enforcement": "suggest",
    "priority": "high",
    "description": "Test-Driven Development workflow and testing guidelines",
    "promptTriggers": {
      "keywords": [
        "test",
        "testing",
        "tdd",
        "jest",
        "spec",
        "unit test",
        "integration test"
      ],
      "intentPatterns": [
        "(write|add|create).*(test|spec)",
        "(test|testing).*(feature|function|endpoint)",
        "tdd"
      ]
    },
    "fileTriggers": {
      "pathPatterns": [
        "**/*.test.ts",
        "**/*.spec.ts",
        "test/**/*.ts"
      ],
      "contentPatterns": [
        "describe\\(",
        "it\\(",
        "test\\(",
        "expect\\("
      ]
    }
  },

  "go-desktop-agent-guidelines": {
    "type": "domain",
    "enforcement": "suggest",
    "priority": "high",
    "description": "Go desktop agent development guidelines with Wails v2, error handling, and platform-specific code",
    "promptTriggers": {
      "keywords": [
        "desktop",
        "agent",
        "wails",
        "golang",
        "go",
        "systray",
        "gui",
        "msi",
        "dmg",
        "windows",
        "macos",
        "goroutine",
        "channel",
        "context",
        "webview"
      ],
      "intentPatterns": [
        "(desktop|agent).*(build|compile|package|develop)",
        "(msi|dmg).*(build|create|package)",
        "wails",
        "(windows|macos).*(agent|desktop)",
        "(go|golang).*(function|package|struct)",
        "(error|panic).*(handling)",
        "platform.?specific"
      ]
    },
    "fileTriggers": {
      "pathPatterns": [
        "desktop_agent/**/*.go",
        "desktop_agent/**/*.sh",
        "desktop_agent/**/*.bat",
        "desktop_agent/cmd/**/*",
        "desktop_agent/internal/**/*"
      ],
      "contentPatterns": [
        "package main",
        "package (agent|screenshot|sysinfo|ui|config)",
        "import.*wails",
        "func main\\(\\)",
        "func.*\\(.*\\).*error",
        "//go:build (windows|darwin|linux)",
        "context\\.Context",
        "type.*struct"
      ]
    }
  },

  "database-operations": {
    "type": "domain",
    "enforcement": "suggest",
    "priority": "high",
    "description": "Database schema design and SQL operations",
    "promptTriggers": {
      "keywords": [
        "database",
        "schema",
        "migration",
        "postgres",
        "postgresql",
        "sql",
        "table",
        "column",
        "index",
        "query"
      ],
      "intentPatterns": [
        "(create|alter|drop).*(table|column|index)",
        "(database|db).*(schema|migration)",
        "sql.*(query|statement)"
      ]
    },
    "fileTriggers": {
      "pathPatterns": [
        "database/**/*.sql",
        "database/**/*.ts"
      ],
      "contentPatterns": [
        "CREATE TABLE",
        "ALTER TABLE",
        "CREATE INDEX",
        "pool\\.query"
      ]
    }
  },

  "ai-integration": {
    "type": "domain",
    "enforcement": "suggest",
    "priority": "medium",
    "description": "OpenAI GPT-5 integration and AI features",
    "promptTriggers": {
      "keywords": [
        "ai",
        "openai",
        "gpt",
        "gpt-5",
        "llm",
        "prompt",
        "analysis",
        "summary",
        "persona"
      ],
      "intentPatterns": [
        "(ai|openai|gpt).*(integration|feature|analysis)",
        "(ticket|content).*(analysis|summary)",
        "persona.*lens"
      ]
    },
    "fileTriggers": {
      "pathPatterns": [
        "src/**/*ai*.ts",
        "src/**/*openai*.ts"
      ],
      "contentPatterns": [
        "import.*openai",
        "gpt-5-mini",
        "reasoning.effort",
        "text.verbosity"
      ]
    }
  },

  "docker-deployment": {
    "type": "domain",
    "enforcement": "suggest",
    "priority": "medium",
    "description": "Docker deployment and container management",
    "promptTriggers": {
      "keywords": [
        "docker",
        "container",
        "deployment",
        "deploy",
        "production",
        "compose"
      ],
      "intentPatterns": [
        "docker.*(build|deploy|compose)",
        "(deploy|deployment).*(production|server)",
        "container"
      ]
    },
    "fileTriggers": {
      "pathPatterns": [
        "docker-compose*.yml",
        "Dockerfile*",
        ".dockerignore"
      ],
      "contentPatterns": [
        "FROM",
        "RUN",
        "CMD",
        "EXPOSE",
        "version:"
      ]
    }
  },

  "security-practices": {
    "type": "quality",
    "enforcement": "suggest",
    "priority": "high",
    "description": "Security best practices and authentication",
    "promptTriggers": {
      "keywords": [
        "security",
        "authentication",
        "authorization",
        "auth",
        "jwt",
        "token",
        "password",
        "secret",
        "api key"
      ],
      "intentPatterns": [
        "(auth|authentication|authorization)",
        "(jwt|token).*(verify|validate|generate)",
        "security",
        "(api.?key|secret)"
      ]
    },
    "fileTriggers": {
      "pathPatterns": [
        "src/**/*auth*.ts",
        "src/**/*security*.ts",
        "src/middleware/**/*.ts"
      ],
      "contentPatterns": [
        "jwt\\.",
        "bcrypt\\.",
        "Authorization.*Bearer",
        "authenticate"
      ]
    }
  },

  "openai-api-expert": {
    "type": "domain",
    "enforcement": "suggest",
    "priority": "high",
    "description": "OpenAI API development with GPT-5 Mini Responses API, reasoning controls, and best practices",
    "promptTriggers": {
      "keywords": [
        "openai",
        "gpt",
        "gpt-5",
        "gpt-4",
        "chatgpt",
        "ai",
        "llm",
        "prompt",
        "reasoning",
        "verbosity",
        "embeddings",
        "completions"
      ],
      "intentPatterns": [
        "(openai|gpt).*(api|integration|call)",
        "(generate|analyze|summarize).*(ai|gpt|openai)",
        "reasoning.*(effort|control)",
        "text.*(verbosity)",
        "(prompt|prompting).*(engineer|design)"
      ]
    },
    "fileTriggers": {
      "pathPatterns": [
        "src/**/*ai*.ts",
        "src/**/*openai*.ts",
        "src/**/*gpt*.ts"
      ],
      "contentPatterns": [
        "import.*openai",
        "openai\\.chat\\.completions",
        "gpt-5-mini",
        "gpt-4",
        "reasoning.*effort",
        "text.*verbosity"
      ]
    }
  },

  "rest-api-expert": {
    "type": "domain",
    "enforcement": "suggest",
    "priority": "high",
    "description": "REST API design, Express routing, validation, authentication, and best practices",
    "promptTriggers": {
      "keywords": [
        "rest",
        "rest api",
        "restful",
        "api design",
        "http methods",
        "status codes",
        "validation",
        "pagination",
        "filtering",
        "cors"
      ],
      "intentPatterns": [
        "(rest|restful).*(api|design|endpoint)",
        "(http|api).*(method|verb|status)",
        "(validate|validation).*(input|request|body)",
        "(paginate|pagination|filter|sort)"
      ]
    },
    "fileTriggers": {
      "pathPatterns": [
        "src/routes/**/*.ts",
        "src/**/*route*.ts",
        "src/**/*api*.ts"
      ],
      "contentPatterns": [
        "app\\.(get|post|put|delete|patch)",
        "router\\.(get|post|put|delete)",
        "res\\.status\\(",
        "req\\.(body|params|query)"
      ]
    }
  },

  "prompt-engineering-expert": {
    "type": "domain",
    "enforcement": "suggest",
    "priority": "medium",
    "description": "AI prompt engineering best practices, templates, and optimization techniques",
    "promptTriggers": {
      "keywords": [
        "prompt",
        "prompting",
        "prompt engineering",
        "system prompt",
        "user prompt",
        "few-shot",
        "chain of thought",
        "prompt template"
      ],
      "intentPatterns": [
        "(prompt|prompting).*(engineer|design|write|create)",
        "(system|user).?prompt",
        "few.?shot",
        "chain.?of.?thought",
        "(improve|optimize|refine).*(prompt)"
      ]
    },
    "fileTriggers": {
      "pathPatterns": [
        "src/**/*prompt*.ts",
        "src/**/*ai*.ts"
      ],
      "contentPatterns": [
        "const.*PROMPT",
        "systemPrompt",
        "userPrompt",
        "role.*system",
        "messages.*\\["
      ]
    }
  },

  "skill-developer": {
    "type": "quality",
    "enforcement": "suggest",
    "priority": "low",
    "description": "Guide for creating and maintaining Claude Code skills with progressive disclosure",
    "promptTriggers": {
      "keywords": [
        "create skill",
        "new skill",
        "skill development",
        "skill-rules",
        "auto-activation",
        "progressive disclosure"
      ],
      "intentPatterns": [
        "(create|add|build|write).*(skill|claude.*skill)",
        "(skill|skills).*(development|creation|guide)",
        "auto.?activation",
        "skill.?rules"
      ]
    },
    "fileTriggers": {
      "pathPatterns": [
        ".claude/skills/**/*.md",
        ".claude/skill-rules.json"
      ],
      "contentPatterns": [
        "# .*Skill",
        "## Core Principles",
        "promptTriggers",
        "fileTriggers"
      ]
    }
  },

  "UIC_Guidelines": {
    "type": "quality",
    "enforcement": "suggest",
    "priority": "critical",
    "description": "Universal ID Convention (UIC) system - unique data-uic attributes for all UI elements, canonical components, and validation",
    "promptTriggers": {
      "keywords": [
        "uic",
        "data-uic",
        "universal id",
        "ui element",
        "component",
        "button",
        "input",
        "form",
        "div",
        "table",
        "tabs",
        "StandardTabs",
        "StandardTable",
        "ui:enforce",
        "master list",
        "element id",
        "tracking",
        "testability"
      ],
      "intentPatterns": [
        "(create|add|build).*(ui|component|element|button|input|form|table|tabs)",
        "(data-uic|uic)",
        "(StandardTabs|StandardTable|TableContainer)",
        "(tabs|table).*(component|pattern)",
        "ui:enforce",
        "(master.*list|uic.*list)",
        "(validate|validation).*(ui|uic)"
      ]
    },
    "fileTriggers": {
      "pathPatterns": [
        "dashboard/**/*.tsx",
        "dashboard/**/*.jsx",
        "dashboard/src/components/**/*",
        "dashboard/src/app/**/*",
        "desktop_agent/frontend/**/*",
        "docs/UI_CONVENTIONS.md",
        "docs/UIC_MASTER_LIST.md"
      ],
      "contentPatterns": [
        "data-uic=",
        "StandardTabs",
        "StandardTable",
        "TableContainer",
        "<table",
        "<TabsList",
        "UMGTAB0001",
        "UMGCNT0004",
        "SHRTAB0001",
        "SHRTBL0001"
      ]
    }
  }
}
